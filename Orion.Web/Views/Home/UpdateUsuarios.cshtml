<form ng-controller="UpdateUsuariosController as vm" name="FormUsuarios">
    <h2>Usuarios</h2>

    <div class="row">
        <div class="form-group col-sm-4">
            <label>Nombre</label>
            <input type="text" class="form-control" ng-model="Usuario.nombre" name="nombre" required />
        </div>
        <div class="form-group col-sm-4">
            <label>Apellido</label>
            <input type="text" class="form-control" ng-model="Usuario.apellido" name="apellido" required />
        </div>
        <div class="form-group col-sm-4">
            <label>Email</label>
            <input type="email" class="form-control" ng-model="Usuario.email" name="email" required />
        </div>
        <div class="form-group col-sm-4"></div>
    </div>
    
    <div class="row">
        <div class="form-group col-sm-4">
            <label>Tipo Usuario</label>
            <select class="form-control" name="tipousuario" ng-model="Usuario.tipoUsuarioId" >
                <option value=" ">Seleccione</option>
                <option ng-repeat="tipoUsuario in vm.tiposUsuarios" ng-selected="Usuario.tipoUsuarioId == tipoUsuario.id" value="{{ tipoUsuario.id }}">
                    {{ tipoUsuario.nombre }}
                </option>
            </select>
        </div>
    </div>
    

    <div class="row">
        <a href="#" class="btn btn-danger" ng-click="vm.cancel()">Cancelar</a>
        <button class="btn btn-success" ng-disabled="FormUsuarios.$invalid" ng-click="vm.updateUsuario()">Send</button>
    </div>
</form>

<script src="~/angular/services/StoreService.js"></script>
<script src="~/angular/services/TiposUsariosServices.js"></script>
<script src="~/angular/services/UsuariosService.js"></script>
<script src="~/angular/repositories/TiposUsuariosRepository.js"></script>
<script src="~/angular/repositories/UsuariosRepository.js"></script>
<script src="~/angular/controllers/Usuarios/UpdateUsuariosController.js"></script>
