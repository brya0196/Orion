<form ng-controller="AddProductosController as vm" name="FormProductos">
    <h2>Productos</h2>

    <div class="row">
        <div class="form-group col-sm-4">
            <label>Nombre</label>
            <input type="text" class="form-control" ng-model="Producto.nombre" name="nombre" required />
        </div>
        <div class="form-group col-sm-4">
            <label>Precio</label>
            <input type="number" class="form-control" ng-model="Producto.precio" name="precio" required />
        </div>
        <div class="form-group col-sm-4">
            <label>Cantidad en Stock</label>
            <input type="number" class="form-control" ng-model="Producto.cantidadStock" name="cantidadStock" required />
        </div>
        <div class="form-group col-sm-4">
            <label>Fecha de Vencimiento</label>
            <input type="date" class="form-control" ng-model="Producto.fechaVencimiento" name="cantidadStock" required />
        </div>
    </div>

    <div class="row">
        <a href="#" class="btn btn-danger" ng-click="vm.cancel()">Cancelar</a>
        <button class="btn btn-success" ng-disabled="FormProductos.$invalid" ng-click="vm.addTipoUsuario()">Send</button>
    </div>
</form>

<script src="~/angular/controllers/Productos/AddProductosController.js"></script>
<script src="~/angular/services/ProductosService.js"></script>
<script src="~/angular/repositories/ProductosRepository.js"></script>