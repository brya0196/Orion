<form ng-controller="AddUsuariosController as vm" name="FormUsuarios">
    <h2>Usuarios</h2>

    <div class="row">
        <div class="form-group col-sm-4">
            <label>Nombre</label>
            <input type="text" class="form-control" ng-model="Usuario.Nombre" name="nombre" required />
        </div>
        <div class="form-group col-sm-4">
            <label>Apellido</label>
            <input type="text" class="form-control" ng-model="Usuario.Apellido" name="nombre" required />
        </div>
        <div class="form-group col-sm-4">
            <label>Email</label>
            <input type="email" class="form-control" ng-model="Usuario.Email" name="email" required />
        </div>
        <div class="form-group col-sm-4"></div>
    </div>
    
    <div class="row">
        <div class="form-group col-sm-4">
            <label>Contrase√±a</label>
            <input type="password" class="form-control" ng-model="Usuario.Password" name="password" required />
        </div>
        
        <div class="form-group col-sm-4">
            <label>Tipo Usuario</label>
            <select class="form-control" name="tipousuario" ng-model="Usuario.TipoUsuarioId">
                <option value="">Seleccione</option>
                <option ng-repeat="tipoUsuario in vm.tiposUsuarios" value="{{ tipoUsuario.id }}">{{ tipoUsuario.nombre }}</option>
            </select>
        </div>
    </div>
    

    <div class="row">
        <a href="#" class="btn btn-danger" ng-click="vm.cancel()">Cancelar</a>
        <button class="btn btn-success" ng-disabled="FormUsuarios.$invalid" ng-click="vm.addUsuario()">Send</button>
    </div>
</form>

<script src="~/angular/services/TiposUsariosServices.js"></script>
<script src="~/angular/services/UsuariosService.js"></script>
<script src="~/angular/repositories/TiposUsuariosRepository.js"></script>
<script src="~/angular/repositories/UsuariosRepository.js"></script>
<script src="~/angular/controllers/Usuarios/AddUsuariosController.js"></script>
