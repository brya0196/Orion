<form ng-controller="AddTiposUsuariosController as vm" name="FormTiposUsuarios">
    <h2>Tipos de Usuarios</h2>

    <div class="row">
        <div class="form-group col-sm-4">
            <label>Nombre</label>
            <input type="text" class="form-control" ng-model="TipoUsuario.nombre" name="nombre" required />
        </div>
    </div>

    <div class="row">
        <a href="#" class="btn btn-danger">Cancelar</a>
        <button class="btn btn-success" ng-disabled="FormTiposUsuarios.$invalid" ng-click="vm.addTipoUsuario()">Success</button>
    </div>
</form>

<script src="~/angular/controllers/TiposUsuarios/AddTiposUsuariosController.js"></script>
<script src="~/angular/services/TiposUsariosServices.js"></script>
<script src="~/angular/repositories/TiposUsuariosRepository.js"></script>